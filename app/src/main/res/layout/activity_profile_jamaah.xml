<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.ProfileJamaah"
    android:padding="@dimen/_20sdp"
    android:background="@color/bg"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:fontFamily="@font/dmsans_med"
        android:text="Kembali"
        android:textColor="@color/navy800"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:padding="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_pic"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/user" />

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/nama"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsans_bold"
                                android:textColor="@color/navy800"
                                android:textSize="@dimen/_12ssp"
                                tools:text="Nama Jamaah" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dmsans_med"
                                    android:text="Jamaah" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_bold"
                            android:text="Alamat Domisili"
                            android:textColor="@color/navy800"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:id="@+id/alamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_reg"
                            android:textColor="@color/navy700"
                            tools:text="Jl.Nama Jalan No.2 Rt 04/Rw 01 Lamongan Kecamatan Lamongan, Surabaya, Jawa Timur" />

                    </LinearLayout>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:columnCount="2"
                        android:rowCount="1">

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsans_bold"
                                android:text="No Ktp"
                                android:textColor="@color/navy800"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/ktp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsans_reg"
                                android:textColor="@color/navy700"
                                tools:text="220000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/dmsans_bold"
                                android:text="No Telepon"
                                android:textColor="@color/navy800"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/telp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsans_reg"
                                android:textColor="@color/navy700"
                                tools:text="085156203867" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/dmsans_bold"
                                android:text="Jenis Kelamin"
                                android:textColor="@color/navy800"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/kelamin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsans_reg"
                                android:text="Laki-Laki"
                                android:textColor="@color/navy700" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/dmsans_bold"
                                android:text="Paket"
                                android:textColor="@color/navy800"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/paket"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsans_reg"
                                android:textColor="@color/navy700"
                                tools:text="Plus Turki" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsans_bold"
                                android:text="Bergabung pada"
                                android:textColor="@color/navy800"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/gabung"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsans_reg"
                                android:textColor="@color/navy700"
                                tools:text="2023-05-02" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/dmsans_bold"
                                android:text="Berangkat"
                                android:textColor="@color/navy800"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/berangkat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsans_reg"
                                android:textColor="@color/navy700"
                                tools:text="2023-05-02" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/dmsans_bold"
                                android:text="Keterangan"
                                android:textColor="@color/navy800"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/keterangan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsans_reg"
                                android:text="Belum Lunas"
                                android:textColor="@color/navy700" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/dmsans_bold"
                                android:text="Di Daftarkan"
                                android:textColor="@color/navy800"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/daftarkan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsans_reg"
                                android:textColor="@color/navy700"
                                tools:text="Bayu Setiawan" />
                        </LinearLayout>
                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsans_bold"
                        android:text="Perlengkapan"
                        android:textColor="@color/navy800"
                        android:textSize="@dimen/_15ssp" />


                        <RadioButton
                            android:id="@+id/koper"
                            android:enabled="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_med"
                            android:text="Koper + Tas Paspor"
                            android:textColor="@color/navy800"
                            android:textSize="@dimen/_12ssp" />

                        <RadioButton
                            android:id="@+id/batik"
                            android:enabled="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_med"
                            android:text="Kain Batik"
                            android:textColor="@color/navy800"
                            android:textSize="@dimen/_12ssp" />

                        <RadioButton
                            android:id="@+id/ihram"
                            android:enabled="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_med"
                            android:text="Kain Ihram"
                            android:textColor="@color/navy800"
                            android:textSize="@dimen/_12ssp" />

                        <RadioButton
                            android:id="@+id/mukena"
                            android:enabled="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_med"
                            android:text="Mukena"
                            android:textColor="@color/navy800"
                            android:textSize="@dimen/_12ssp" />

                        <RadioButton
                            android:id="@+id/syal"
                            android:enabled="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_med"
                            android:text="Syal"
                            android:textColor="@color/navy800"
                            android:textSize="@dimen/_12ssp" />

                        <RadioButton
                            android:id="@+id/panduan"
                            android:enabled="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_med"
                            android:text="Buku Panduan"
                            android:textColor="@color/navy800"
                            android:textSize="@dimen/_12ssp" />

                        <RadioButton
                            android:id="@+id/doa"
                            android:enabled="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_med"
                            android:text="Buku Do'a"
                            android:textColor="@color/navy800"
                            android:textSize="@dimen/_12ssp" />

                        <RadioButton
                            android:id="@+id/sholawat"
                            android:enabled="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_med"
                            android:text="Booklet Sholawat"
                            android:textColor="@color/navy800"
                            android:textSize="@dimen/_12ssp" />

                        <RadioButton
                            android:id="@+id/peta"
                            android:enabled="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_med"
                            android:text="Booklet Peta Jannatul Baqi"
                            android:textColor="@color/navy800"
                            android:textSize="@dimen/_12ssp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>